@model ApplicationCore.Models.UserBuyMovieModel

@{
    ViewData["title"] = "Buy Movie";
}

<form asp-action="ConfirmPurchase">
    <div class="mb-3 col-form-label-lg">
        <h3>Confirm Purchase Info</h3>
    </div>
    <div class="mb-3">
        <label asp-for="UserId">UserId</label>
        <input asp-for="UserId" class="form-control" value="@Model.UserId" name="UserId" readonly>
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label asp-for="MovieId">MovieId</label>
        <input asp-for="MovieId" class="form-control" value="@Model.MovieId" name="MovieId" readonly>
    </div>
    <button type="submit" class="btn btn-primary">ConfirmPurchase</button>
</form>

